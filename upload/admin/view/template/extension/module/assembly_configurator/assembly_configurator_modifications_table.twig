<table class="table table-striped table-bordered table-hover">
  <thead class="text-center">
    <tr>
      <td rowspan="2" class="text-center"><input type="checkbox" id="form-modifications-select-all"></td>
      <td rowspan="2">{{ column_id }}</td>
      <td rowspan="2">{{ column_author }}</td>
      <td rowspan="2">{{ column_code }}</td>
      <td rowspan="2">{{ column_name }}</td>
      <td rowspan="2">{{ column_file }}</td>
      <td colspan="2">{{ column_version }}</td>
      <td rowspan="2">{{ column_status }}</td>
    </tr>
    <tr>
      <td>{{ column_version_file }}</td>
      <td>{{ column_version_installed }}</td>
    </tr>
  </thead>
  {% for file, modification in modifications %}
    <tbody>
      <tr {% if (modification.available_installation) %}class="success"{% endif %} {% if (modification.available_update) %}class="warning"{% endif %}>
        <td class="text-center"><input name="modifications[]" type="checkbox" value="{{ file }}" {% if not (modification.available_installation or modification.available_update) %}disabled{% endif %}></td>
        <td>{% if (modification.modification_id) %}{{ modification.modification_id }}{% endif %}</td>
        <td>{{ modification.author }}</td>
        <td>{{ modification.code }}</td>
        <td><a href="{{ modification.link }}" target="_blank">{{ modification.name }} <i class="fa fa-external-link" aria-hidden="true"></i></a></td>
        <td>{{ file }}</td>
        <td>{{ modification.version }}</td>
        <td>{% if (modification.installed) %}{{ modification.installed }}{% else %}{{ text_available }}{% endif %}</td>
        <td>{{ modification.text_status }}</td>
      </tr>
    </tbody>
  {% endfor %}
</table>
