{% if (xmls) %}
  <form action="{{ url_install }}" class="form-horizontal" method="post" enctype="multipart/form-data" id="form-modifications">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="btn-group" role="group" aria-label="...">
          <button type="button" form="form-modifications" data-toggle="tooltip" title="{{ button_install }}" class="btn btn-success" name="apply" value="1"><i class="fa fa-cloud-download" aria-hidden="true"></i> {{ button_install }}</button>
        </div>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <td class="text-center"><input type="checkbox" id="form-modifications-select-all"></td>
            <td>{{ column_author }}</td>
            <td>{{ column_version }}</td>
            <td>{{ column_code }}</td>
            <td>{{ column_name }}</td>
            <td>{{ column_file }}</td>
            <td>{{ column_action }}</td>
          </tr>
        </thead>
        {% for file, modification in modifications %}
          <tbody>
            <tr>
              <td class="text-center"><input type="checkbox" name="files[]" value="{{ file }}"></td>
              <td>{{ modification.author }}</td>
              <td>{{ modification.version }}</td>
              <td>{{ modification.code }}</td>
              <td><a href="{{ modification.link }}" target="_blank">{{ modification.name }} <i class="fa fa-external-link" aria-hidden="true"></i></a></td>
              <td>{{ file }}</td>
              <td>экшен</td>
            </tr>
          </tbody>
        {% endfor %}
      </table>
    </div>
  </form>
{% else %}
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>{{ text_warning }}</strong> {{ text_empty }}
  </div>
{% endif %}
