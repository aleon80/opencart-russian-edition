<table class="table table-striped table-bordered table-hover">
  <thead class="text-center">
    <tr>
      <td rowspan="2" class="text-center"><input type="checkbox" id="form-extensions-select-all"></td>
      <td rowspan="2">{{ column_id }}</td>
      <td rowspan="2">{{ column_author }}</td>
      <td rowspan="2">{{ column_code }}</td>
      <td rowspan="2">{{ column_name }}</td>
      <td rowspan="2">{{ column_file }}</td>
      <td colspan="2">{{ column_version }}</td>
      <td rowspan="2">{{ column_status }}</td>
    </tr>
    <tr>
      <td>{{ column_version_file }}</td>
      <td>{{ column_version_installed }}</td>
    </tr>
  </thead>
  {% for file, extension in extensions %}
    <tbody>
      <tr {% if (extension.available_installation) %}class="success"{% endif %} {% if (extension.available_update) %}class="warning"{% endif %}>
        <td class="text-center"><input name="extensions[]" type="checkbox" value="{{ file }}" {% if not (extension.available_installation or extension.available_update) %}disabled{% endif %}></td>
        <td>{% if (extension.extension_id) %}{{ extension.extension_id }}{% endif %}</td>
        <td>{{ extension.author }}</td>
        <td>{{ extension.code }}</td>
        <td><a href="{{ extension.link }}" target="_blank">{{ extension.name }} <i class="fa fa-external-link" aria-hidden="true"></i></a></td>
        <td>{{ file }}</td>
        <td>{{ extension.version }}</td>
        <td>{% if (extension.installed) %}{{ extension.installed }}{% else %}{{ text_available }}{% endif %}</td>
        <td>{{ extension.text_status }}</td>
      </tr>
    </tbody>
  {% endfor %}
</table>
