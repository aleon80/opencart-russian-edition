
<form action="{{ url_action }}" method="post" enctype="multipart/form-data" id="form-general" class="form-horizontal">
  <div class="form-group required">
    <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
    <div class="col-sm-10">
      <select name="module_assembly_configurator_status" id="input-status" class="form-control">
        <option value="1" {% if module_assembly_configurator_status %}selected="selected"{% endif %}>{{ text_enabled }}</option>
        <option value="0" {% if not module_assembly_configurator_status %}selected="selected"{% endif %}>{{ text_disabled }}</option>
      </select>
    </div>
  </div>
</form>
