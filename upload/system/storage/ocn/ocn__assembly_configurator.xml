<?xml version="1.0" encoding="utf-8"?>
<modification>
  <name>[OCN] Конфигуратор сборки</name>
  <code>ocn__assembly_configurator</code>
  <version>3.0.0.0</version>
  <author>Hkr</author>
  <link>https://forum.opencart.name/</link>

  <!-- Выводим ссылку на конфигуратор в меню -->
  <file path="admin/language/ru-ru/common/column_left.php">
    <operation>
      <search trim="true"><![CDATA[$_['text_dashboard']]]></search>
      <add position="after" trim="true"><![CDATA[
        $_['text_ocn']                    = 'OCN';
        $_['text_assembly_configurator']  = 'Конфигуратор сборки';
      ]]></add>
    </operation>
  </file>
  <file path="admin/language/en-gb/common/column_left.php">
    <operation>
      <search trim="true"><![CDATA[$_['text_dashboard']]]></search>
      <add position="after" trim="true"><![CDATA[
        $_['text_ocn']                    = 'OCN';
        $_['text_assembly_configurator']  = 'Build configurator';
      ]]></add>
    </operation>
  </file>

  <file path="admin/controller/common/column_left.php">
    <operation>
      <search trim="true"><![CDATA[// Catalog]]></search>
      <add position="before"><![CDATA[
        // OCN
        $ocn = [];

        if ($this->user->hasPermission('access', 'extension/module/assembly_configurator')) {
          $ocn[] = [
            'name'	   => $this->language->get('text_assembly_configurator'),
            'href'     => $this->url->link('extension/module/assembly_configurator', 'user_token=' . $this->session->data['user_token'], true),
            'children' => []
          ];
        }

        if ($ocn) {
          $data['menus'][] = [
            'id'       => 'menu-ocn',
            'icon'	   => 'fa-wrench',
            'name'	   => $this->language->get('text_ocn'),
            'href'     => '',
            'children' => $ocn
          ];
        }
      ]]></add>
    </operation>
  </file>
<!-- / -->

<!-- Добавляем проверку для аякс запрос обновления модификаторов -->
  <file path="admin/controller/marketplace/modification.php">
    <operation>
      <search><![CDATA[$this->response->redirect($this->url->link(!empty($data['redirect']) ? $data['redirect'] : 'marketplace/modification', 'user_token=' . $this->session->data['user_token'] . $url, true));]]></search>
      <add position="before" trim="true"><![CDATA[
        if (isset($this->request->get['configurator']) && $this->request->get['configurator'] === 'on') {
          if (isset($this->session->data['success'])) {
            unset($this->session->data['success']);
          }
          $this->response->addHeader('Content-Type: application/json; charset=utf-8');
          $this->response->setOutput(json_encode(['success' => $this->language->get('text_success')]));
        } else {
      ]]></add>
    </operation>
    <operation>
      <search><![CDATA[$this->response->redirect($this->url->link(!empty($data['redirect']) ? $data['redirect'] : 'marketplace/modification', 'user_token=' . $this->session->data['user_token'] . $url, true));]]></search>
      <add position="after" trim="true"><![CDATA[
        }
      ]]></add>
    </operation>
    <operation>
      <search index="2"><![CDATA[$this->getList();]]></search>
      <add position="replace" trim="true"><![CDATA[
        if (!isset($this->request->get['configurator'])) {
          $this->getList();
        }
      ]]></add>
    </operation>
  </file>
<!-- / -->
</modification>
